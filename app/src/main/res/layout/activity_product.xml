<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foodalert.food_alert.ProductActivity">
<View
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:id="@+id/backTitle"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="17"
        android:id="@+id/gridlayout"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:id="@+id/barcode"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:id="@+id/imageView"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:maxHeight="120dp"
            android:baselineAlignBottom="false"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:layout_marginLeft="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="5dp" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/allergies_list"
            android:layout_row="7"
            android:layout_column="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:id="@+id/layAlter"
            android:alpha="0">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:id="@+id/imgAlter"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Doliprane sans lactose"
                android:id="@+id/txtAlter"
                android:layout_weight="0.57"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Alternative"
            android:id="@+id/txtAlternativesTitle"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal"
            android:alpha="0"
            android:capitalize="characters" />

    </GridLayout>
</RelativeLayout>
