<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="foodalert.food_alert.ProductActivity">
<View
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="#ffa2cc68"
    android:id="@+id/backTitle"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2"
        android:rowCount="15"
        android:id="@+id/gridlayout"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10000101002"
            android:id="@+id/barcode"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:id="@+id/imageView"
            android:layout_marginTop="15dp"
            android:background="#333333"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:maxHeight="120dp"
            android:baselineAlignBottom="false"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUSCOUS"
            android:id="@+id/product_name"
            android:layout_marginLeft="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/allergies_list"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Substances indÃ©sirables"
            android:id="@+id/textView3"
            android:layout_row="5"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />
    </GridLayout>
</RelativeLayout>
